{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "manifest_version": 3,
  "name": "Perplexity Batch Question Assistant",
  "version": "1.0.0",
  "description": "Batch-send questions to Perplexity, ChatGPT, Gemini, or Claude and collect results without creating an account.",
  "permissions": [
    "storage",
    "sidePanel",
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.perplexity.ai/*",
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "https://gemini.google.com/*",
    "https://ai.google.com/*",
    "https://claude.ai/*",
    "https://ai-assistant-api.aimegatron.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.perplexity.ai/*",
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://gemini.google.com/*",
        "https://ai.google.com/*",
        "https://claude.ai/*"
      ],
      "js": [
        "providers.js",
        "config.js",
        "content.js"
      ],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "injected.js"
      ],
      "matches": [
        "https://www.perplexity.ai/*"
      ]
    }
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_title": "Perplexity Batch Question Assistant"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
